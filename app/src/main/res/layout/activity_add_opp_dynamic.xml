<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.customCRM.AddOpp_Dynamic">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/addOpp_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#0051A1"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >
            <LinearLayout
                android:id="@+id/addOppLL"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/backBtn_addOpp"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@android:color/transparent"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:text="@string/fa_back"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/logo"
                    />

            </LinearLayout>


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>

    <TextView
        android:id="@+id/addOpp_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="visible"
        android:background="#0051A1"
        android:textColor="@android:color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:id="@+id/addOpp_mainParent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/getRecord_addOpp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_shadow"
                android:layout_margin="10dp"
                android:paddingBottom="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/partitionName_textview_addOpp"
                        android:padding="10dp"
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:background="#898989"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/record_id_hidden_addOpp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/accountSearchHint_addOpp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="10dp"
                            android:hint="Search Account">

                            <AutoCompleteTextView
                                android:id="@+id/accountSearch_addOpp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:id="@+id/change_serach_result_addopp"
                            android:textSize="25sp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:visibility="gone"
                            android:textColor="#000000"
                            android:layout_margin="10dp"
                            android:text="@string/fa_addDrawer_remove"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/key_contact_fieldId_addOpp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/key_contact_restriction_addOpp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/key_contact_display_addOpp"
                        android:textSize="17sp"
                        android:padding="10dp"
                        android:layout_margin="10dp"
                        android:background="#E0E0E0"
                        android:textStyle="bold"
                        android:textColor="#575757"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Spinner
                        android:id="@+id/key_contact_spinner_addOpp"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content"
                        android:entries="@array/displayDefaultSpinner"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addOpp_parent"
                android:layout_margin="10dp"
                android:paddingBottom="30dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>

            <Button
                android:id="@+id/addOppButton"
                android:drawableLeft="@drawable/ic_add_white_24dp"
                android:background="#0051A1"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/addOpp_warning"
                android:textColor="#d50000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Check your Internet connection \nor\n Refresh Page."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/addOpp_refresh"
                android:text="@string/fa_refresh"
                android:gravity="center"
                android:textSize="35sp"
                android:textColor="#d50000"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/success_parent_addOpp"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/success_thumb_addOpp"
                    android:text="@string/fa_addDrawer_thumb"
                    android:textSize="40sp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#0051A1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/addOpp_success_toast"
                    android:textSize="20sp"
                    android:layout_marginBottom="25dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/AddMoreOpp"
                    android:textSize="20sp"
                    android:textColor="#64B5F6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>