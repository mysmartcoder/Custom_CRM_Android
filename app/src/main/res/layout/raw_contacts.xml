<LinearLayout
    android:id="@+id/conAdp_parent"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:descendantFocusability="blocksDescendants"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/cont_record_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/cont_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/cont_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entered : "
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/con_tventered"
            android:layout_weight="0.6"/>

        <TextView
            android:id="@+id/cont_entered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_weight="0.4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact : "
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/con_tvcontact"
            android:layout_weight="0.6"/>

        <TextView
            android:id="@+id/cont_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#1E88E5"
            android:layout_weight="0.4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account : "
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/con_tvaccount"
            android:layout_weight="0.6"/>

        <TextView
            android:id="@+id/cont_acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#1E88E5"
            android:layout_weight="0.4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lead Status : "
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/con_tvleadstatus"
            android:layout_weight="0.6"/>

        <TextView
            android:id="@+id/cont_lead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_weight="0.4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/con_tvcampaign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Campaign : "
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_weight="0.6"/>

        <TextView
            android:id="@+id/cont_camp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_weight="0.4"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/con_tvacctmgr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acct Mgr : "
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_weight="0.6"/>

        <TextView
            android:id="@+id/cont_act_mgr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_weight="0.4"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/con_tvphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone : "
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_weight="0.6"/>

        <TextView
            android:id="@+id/cont_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_weight="0.4"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/icons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12"
        android:gravity="right"
        >

        <Button
            android:id="@+id/select_btn_Cont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:textSize="30sp"
            android:textColor="#4CAF50"
            android:text="@string/fa_icon_select" />

        <Button
            android:id="@+id/assign_btn_Cont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:textSize="30sp"
            android:textColor="#607D8B"
            android:text="@string/fa_assign" />


        <Button
            android:id="@+id/call_btn_Cont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:textSize="30sp"
            android:text="@string/fa_icon_call"/>

        <Button
            android:id="@+id/delete_btn_Cont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:textSize="30sp"
            android:textColor="#424242"
            android:text="@string/fa_icon_delete"/>

        <Button
            android:id="@+id/map_btn_Cont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:textSize="30sp"
            android:text="@string/fa_icon_map" />

        <Button
            android:id="@+id/email_btn_Con"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:textSize="30sp"
            android:textColor="#0051A1"
            android:text="@string/fa_icon_mail"
            android:layout_margin="5dp"/>

    </LinearLayout>

</LinearLayout>