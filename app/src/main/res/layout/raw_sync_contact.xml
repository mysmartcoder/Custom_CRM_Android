<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/raw_sync_contact_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator">

    <TextView
        android:id="@+id/firstnameDisplay_syncon"
        android:text="FirstName"
        android:textSize="23sp"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/lastnameDisplay_syncon"
        android:text="LastName"
        android:textSize="23sp"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/phoneDisplay_syncon"
        android:text="Phone"
        android:textSize="23sp"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/phone2Display_syncon"
        android:text="Phone2"
        android:textSize="23sp"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/faxDisplay_syncon"
        android:text="Fax"
        android:textSize="23sp"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/emailDisplay_syncon"
        android:text="Email"
        android:textSize="23sp"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>