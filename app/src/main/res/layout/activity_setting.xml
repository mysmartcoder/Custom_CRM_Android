<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nav_user_symbol_setting"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="25sp"
                android:background="@drawable/circle"
                android:textColor="@android:color/white"
                android:gravity="center" />

            <TextView
                android:id="@+id/UserName_Nav_setting"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000000"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/change_back_parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0051A1"
            android:padding="7dp"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/back_setting_parent"
                android:src="@drawable/ic_color_lens_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/change_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Background Theme"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/btn1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@color/col1"
                />

            <Button
                android:id="@+id/btn2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@color/col2"
                />

            <Button
                android:id="@+id/btn3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@color/col3"
                />

            <Button
                android:id="@+id/btn4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@color/col4"
                />

            <Button
                android:id="@+id/btn5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@color/col5"
                />

            <Button
                android:id="@+id/btn6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@color/col6"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:id="@+id/change_pass_parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:text="@string/fa_setting_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:padding="5dp"
                android:textColor="#000000"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/change_pass_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="17sp"
                android:padding="5dp"
                android:textColor="#000000"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#757575"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:id="@+id/change_url_parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:text="@string/fa_setting_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#000000"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                />


            <TextView
                android:id="@+id/change_url_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Url"
                android:textSize="17sp"
                android:padding="5dp"
                android:textColor="#000000"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#757575"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:id="@+id/change_font_parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:text="@string/fa_setting_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:padding="5dp"
                android:textColor="#000000"
                android:layout_marginRight="10dp"/>


            <TextView
                android:id="@+id/changeFontStyleBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Change Font-Style"
                android:textSize="17sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#757575"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:id="@+id/sync_contact_parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/sync_contact_icon"
                android:src="@drawable/ic_contact_phone_black_24dp"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sync Contacts"
                android:padding="5dp"
                android:textSize="17sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#757575"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:id="@+id/logout_setting"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:text="@string/fa_setting_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:padding="5dp"
                android:textColor="#000000"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="17sp"
                android:padding="5dp"
                android:textColor="#000000"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:id="@+id/change_feedback_parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/feedback_icon"
                android:padding="5dp"
                android:src="@drawable/ic_feedback_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send Feedback"
                android:padding="5dp"
                android:textSize="17sp"
                android:textColor="#000000"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#757575"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:id="@+id/change_rate_parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:text="@string/fa_setting_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:padding="5dp"
                android:textColor="#FBB601"
                android:layout_marginRight="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate LeadMasterCRM"
                android:textSize="17sp"
                android:padding="5dp"
                android:textColor="#000000"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#757575"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:id="@+id/change_share_parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:text="@string/fa_setting_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:padding="5dp"
                android:textColor="#424242"
                android:layout_marginRight="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share LeadMasterCRM"
                android:padding="5dp"
                android:textSize="17sp"
                android:textColor="#000000"
                />
        </LinearLayout>

    </LinearLayout>

</ScrollView>