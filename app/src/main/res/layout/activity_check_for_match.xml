<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cfm_parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.leadmaster.CallbackTask_Activity">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cfm_toolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#0051A1"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:text="Check For Match"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <EditText
            android:id="@+id/checkForMatch_company_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#CFD8DC"
            android:background="@drawable/rounded_edittext"
            android:padding="5dip"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Company Name"
            android:layout_weight="1"
            />

        <EditText
            android:id="@+id/checkForMatch_email_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#CFD8DC"
            android:background="@drawable/rounded_edittext"
            android:padding="5dip"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Email"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <EditText
            android:id="@+id/checkForMatch_lastname_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#CFD8DC"
            android:background="@drawable/rounded_edittext"
            android:padding="5dip"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Last Name"
            android:layout_weight="1"
            />

        <EditText
            android:id="@+id/checkForMatch_address_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#CFD8DC"
            android:background="@drawable/rounded_edittext"
            android:padding="5dip"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Address"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/icons_container_CheckForMatch"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <EditText
            android:id="@+id/checkForMatch_phone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:backgroundTint="#CFD8DC"
            android:background="@drawable/rounded_edittext"
            android:padding="5dip"

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Phone"
            android:layout_weight="1"
            />

        <!--android:drawableRight="@drawable/ic_action_search"-->

        <Button
            android:id="@+id/check_for_match_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textSize="30sp"
            android:text="@string/fa_search" />

    </LinearLayout>

    <ListView
        android:id="@+id/checkForMatch_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:focusable="false"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        />


    <LinearLayout
        android:id="@+id/cfm_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#0051A1"
        android:layout_gravity="bottom"
        android:weightSum="5"
        android:layout_weight="0"
        >

        <Button
            android:id="@+id/prevBtn_CheckForMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:textAllCaps="false"
            android:visibility="invisible"
            android:backgroundTint="#CBD2D8"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center">

            <TextView
                android:id="@+id/startingIndex_CheckForMatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:textColor="#fff"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/endingIndex_CheckForMatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:textColor="#fff"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/totalIndex_CheckForMatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:textColor="#fff"
                android:textStyle="bold"
                />

        </LinearLayout>

        <Button
            android:id="@+id/nextBtn_CheckForMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textAllCaps="false"
            android:visibility="invisible"
            android:backgroundTint="#CBD2D8"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>

</LinearLayout>
