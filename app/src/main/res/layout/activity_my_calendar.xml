<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leadmaster.MyCalendar_Activity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/mycalendar_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#0051A1"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >
            <LinearLayout
                android:id="@+id/myCalLL"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/backBtn_myCal"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@android:color/transparent"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:text="@string/fa_back"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/logo"
                    />

            </LinearLayout>


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/mycal_header"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/calendar_prev_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:src="@drawable/prev" />

        <!-- date title -->
        <TextView
            android:id="@+id/calendar_date_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/calendar_next_button"
            android:layout_toRightOf="@+id/calendar_prev_button"
            android:gravity="center"
            android:text="current date"
            android:textColor="#222222"
            android:textStyle="bold" />
        <!-- next button -->
        <ImageView
            android:id="@+id/calendar_next_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:src="@drawable/next" />

        <LinearLayout
            android:id="@+id/linear_day_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnday"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:text="Day"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnweek"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:text="Week"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnmonth"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="#0051A1"
                android:text="Month"
                android:textColor="#fff" />

        </LinearLayout>

        <Button
            android:id="@+id/current_date_btn"
            android:background="@drawable/current_date_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="7dp"
            android:text="10"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlayout_calendar_month_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">


        <com.leadmaster.custom_calendar.CustomCalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:visibility="visible"
            app:calendarBackgroundColor="@color/white"
            app:calendarTitleTextColor="@color/white"
            app:currentDayOfMonthColor="#0051A1"
            app:dayOfMonthTextColor="#000000"
            app:dayOfWeekTextColor="#000000"
            app:disabledDayBackgroundColor="@color/white"
            app:disabledDayTextColor="@color/greyed_out"
            app:selectedDayBackgroundColor="@color/greyed_out"
            app:titleLayoutBackgroundColor="#0051A1"
            app:weekLayoutBackgroundColor="#9E9E9E" />


        <View
            android:id="@+id/Divider_MyCal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#0051A1" />

        <ListView
            android:id="@+id/calendar_listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:divider="@color/greyed_out"
            android:dividerHeight="0.5dp"
            android:padding="2dp" />
        <TextView
            android:id="@+id/Display_MyCalendar_Warning"
            android:text="No any event available"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#f44336"
            android:gravity="center"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:eventTextColor="@android:color/white"
        app:textSize="10sp"
        android:visibility="gone"
        app:dayNameLength="length_short"
        app:hourHeight="60dp"
        app:headerColumnPadding="5dp"
        app:headerColumnTextColor="#8f000000"
        app:headerRowPadding="12dp"
        app:columnGap="3dp"
        app:noOfVisibleDays="3"
        app:headerRowBackgroundColor="#ffefefef"
        app:dayBackgroundColor="#05000000"
        app:todayBackgroundColor="#1848adff"
        app:headerColumnBackground="#ffffffff"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        />

</LinearLayout>
